{
  "manifest_version": 3,
  "name": "NomadBoard",
  "version": "1.0.0",
  "description": "Track your job applications efficiently with Google Sheets integration",
  "permissions": ["activeTab", "storage", "identity", "identity.email"],
  "host_permissions": ["https://sheets.googleapis.com/*"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/assets/icons/icon16.png",
      "48": "src/assets/icons/icon48.png",
      "128": "src/assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "src/js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/config/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "262329997733-dlgb28ljup88nno1vhdgblffll96cr23.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  }
}
